@model one_db_mitra.Models.Admin.KaryawanImportPreviewViewModel
@{
    ViewData["Title"] = "Preview Import Karyawan";
}

<div class="container-fluid px-0">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center gap-3 mb-4">
        <div>
            <p class="text-uppercase text-secondary small mb-1">Karyawan</p>
            <h2 class="mb-1">Preview Import Excel</h2>
            <p class="text-secondary mb-0">Periksa baris valid dan error sebelum diproses.</p>
        </div>
        <div class="d-flex flex-wrap gap-2 align-items-center">
            <span class="badge text-bg-success">Valid: @Model.ValidCount</span>
            <span class="badge text-bg-danger">Error: @Model.InvalidCount</span>
            <span class="badge text-bg-secondary">Total: @Model.Total</span>
            <form asp-action="ConfirmImport" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="token" value="@Model.Token" />
                <button type="submit" class="btn btn-primary" @(Model.ValidCount == 0 ? "disabled" : null)>
                    <i class="bi bi-check-lg me-2"></i>Proses Import
                </button>
            </form>
            <a asp-action="Index" class="btn btn-outline-secondary">Kembali</a>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">#</th>
                        <th>Status</th>
                        <th>Aksi</th>
                        <th>NIK</th>
                        <th>Nama</th>
                        <th>Perusahaan</th>
                        <th>Departemen</th>
                        <th>Section</th>
                        <th>Jabatan</th>
                        <th>Error</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Rows.Any())
                    {
                        <tr>
                            <td colspan="10" class="text-center text-secondary py-4">Tidak ada baris yang terbaca.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var row in Model.Rows)
                        {
                            <tr class="@(row.IsValid ? string.Empty : "table-danger")">
                                <td class="ps-4">@row.RowNumber</td>
                                <td>
                                    <span class="badge @(row.IsValid ? "text-bg-success" : "text-bg-danger")">
                                        @(row.IsValid ? "Valid" : "Error")
                                    </span>
                                </td>
                                <td>
                                    <span class="badge text-bg-light">@row.Action</span>
                                </td>
                                <td>@row.NoNik</td>
                                <td>@row.NamaLengkap</td>
                                <td>@(string.IsNullOrWhiteSpace(row.CompanyName) ? row.CompanyId.ToString() : row.CompanyName)</td>
                                <td>@(string.IsNullOrWhiteSpace(row.DepartmentName) ? "-" : row.DepartmentName)</td>
                                <td>@(string.IsNullOrWhiteSpace(row.SectionName) ? "-" : row.SectionName)</td>
                                <td>@(string.IsNullOrWhiteSpace(row.PositionName) ? "-" : row.PositionName)</td>
                                <td class="text-danger small">
                                    @if (!row.IsValid)
                                    {
                                        @string.Join(" | ", row.Errors)
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
