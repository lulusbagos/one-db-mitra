@model one_db_mitra.Models.Admin.RoleMenuViewModel
@{
    ViewData["Title"] = "Akses Role";
}

<div class="container-fluid px-0">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center gap-3 mb-4">
        <div>
            <p class="text-uppercase text-secondary small mb-1">Pengaturan</p>
            <h2 class="mb-1">Akses Role</h2>
            <p class="text-secondary mb-0">Atur menu yang dapat diakses per role.</p>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center gap-3">
            <div>
                <h6 class="mb-1">Pilih Role</h6>
                <small class="text-secondary">Menu akan disimpan untuk role yang dipilih.</small>
            </div>
            <form method="get" asp-action="RoleAccess" class="d-flex gap-2 align-items-center">
                <select name="roleId" class="form-select" onchange="this.form.submit()" @(Model.RoleOptions.Any() ? null : "disabled")>
                    @foreach (var option in Model.RoleOptions)
                    {
                        <option value="@option.Value" selected="@(option.Selected ? "selected" : null)">@option.Text</option>
                    }
                </select>
                <noscript><button class="btn btn-outline-secondary" type="submit">Pilih</button></noscript>
            </form>
        </div>
        <div class="card-body">
            @if (!Model.RoleOptions.Any())
            {
                <div class="alert alert-warning mb-0">
                    Role belum tersedia. Tambahkan role terlebih dahulu di <a asp-controller="UserAdmin" asp-action="Index" class="alert-link">Manajemen User</a>.
                </div>
            }
            else
            {
                <form method="post" asp-action="RoleAccess">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="RoleId" value="@Model.RoleId" />
                    <div class="table-responsive">
                        <table class="table table-striped align-middle mb-0">
                            <thead>
                                <tr>
                                    <th>Menu</th>
                                    <th>Kode</th>
                                    <th class="text-end">Akses</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Menus.Count == 0)
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-secondary py-4">Belum ada menu untuk diatur.</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var menu in Model.Menus)
                                    {
                                        var isChecked = Model.SelectedMenuIds.Contains(menu.MenuId);
                                        <tr>
                                            <td>
                                                <div style="padding-left: @(menu.Depth * 16)px">
                                                    <strong>@menu.DisplayName</strong>
                                                </div>
                                            </td>
                                            <td>@menu.MenuCode</td>
                                            <td class="text-end">
                                                <input type="checkbox" class="form-check-input" name="selectedMenus" value="@menu.MenuId" @(isChecked ? "checked" : null) />
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="d-flex justify-content-end mt-3">
                        <button type="submit" class="btn btn-primary" @(Model.Menus.Count == 0 ? "disabled" : null)>Simpan Akses</button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
