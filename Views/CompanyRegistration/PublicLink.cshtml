@model one_db_mitra.Models.Admin.PengajuanPublicUploadViewModel
@{
    ViewData["Title"] = "Lengkapi Dokumen Pengajuan";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center gap-3 mb-4">
        <div>
            <p class="text-uppercase text-secondary small mb-1">Link Publik</p>
            <h2 class="mb-1">@Model.NamaPerusahaan</h2>
            <p class="text-secondary mb-0">Kode pengajuan: @Model.KodePengajuan</p>
        </div>
    </div>

    @if (TempData["PublicMessage"] is string msg)
    {
        <div class="alert alert-success">@msg</div>
    }

    <div class="card">
        <div class="card-body">
            <form asp-action="PublicLink" asp-route-token="@Model.Token" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" name="PengajuanId" value="@Model.PengajuanId" />

                <div class="table-responsive">
                    <table class="table table-sm align-middle">
                        <thead>
                            <tr>
                                <th>Dokumen</th>
                                <th>Status</th>
                                <th>Upload</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        @for (var i = 0; i < Model.Dokumen.Count; i++)
                        {
                            var doc = Model.Dokumen[i];
                            <tr>
                                <td>
                                    <div class="fw-semibold">@doc.NamaDokumen</div>
                                    <div class="small text-secondary">@doc.Deskripsi</div>
                                </td>
                                <td><span class="badge text-bg-light">@doc.Status</span></td>
                                <td>
                                    <input type="hidden" name="Dokumen[@i].ReqId" value="@doc.ReqId" />
                                    <input type="file" name="Dokumen[@i].UploadFile" class="form-control form-control-sm" />
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(doc.FileUrl))
                                    {
                                        <a class="btn btn-sm btn-outline-primary" href="@doc.FileUrl" target="_blank">Lihat</a>
                                    }
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">Simpan Dokumen</button>
                </div>
            </form>
        </div>
    </div>
</div>
