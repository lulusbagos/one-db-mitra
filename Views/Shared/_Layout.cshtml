@using one_db_mitra.Services.AppSetting
@using one_db_mitra.Data
@using Microsoft.EntityFrameworkCore
@using System.Security.Claims
@inject AppSettingService AppSettingService
@inject OneDbMitraContext Db
@{
    var setting = await AppSettingService.GetAsync();
    var appName = string.IsNullOrWhiteSpace(setting.nama_aplikasi) ? "One DB Mitra" : setting.nama_aplikasi.Trim();
    var headerName = string.IsNullOrWhiteSpace(setting.nama_header) ? "Konsol Administrasi" : setting.nama_header.Trim();
    var footerText = string.IsNullOrWhiteSpace(setting.footer_text)
        ? "Copyright System Integrasi Departemen supported by PT INDEXIM COALINDO"
        : setting.footer_text.Trim();
    var logoUrl = string.IsNullOrWhiteSpace(setting.logo_url) ? null : setting.logo_url.Trim();
    var userTheme = User.FindFirstValue("user_theme");
    var userFontPrimary = User.FindFirstValue("user_font_primary");
    var userFontSecondary = User.FindFirstValue("user_font_secondary");
    var fontPrimary = string.IsNullOrWhiteSpace(userFontPrimary)
        ? (string.IsNullOrWhiteSpace(setting.font_primary) ? "Poppins" : setting.font_primary.Trim())
        : userFontPrimary.Trim();
    var fontSecondary = string.IsNullOrWhiteSpace(userFontSecondary)
        ? (string.IsNullOrWhiteSpace(setting.font_secondary) ? "Manrope" : setting.font_secondary.Trim())
        : userFontSecondary.Trim();
    var announcementNow = DateTime.Now;
    var announcementActive = setting.announcement_enabled
        && (setting.announcement_start == null || setting.announcement_start <= announcementNow)
        && (setting.announcement_end == null || setting.announcement_end >= announcementNow)
        && !string.IsNullOrWhiteSpace(setting.announcement_message);
    var announcementTitle = string.IsNullOrWhiteSpace(setting.announcement_title) ? "Pengumuman" : setting.announcement_title.Trim();
    var announcementType = string.IsNullOrWhiteSpace(setting.announcement_type) ? "info" : setting.announcement_type.Trim().ToLowerInvariant();
    var pageTitle = string.IsNullOrWhiteSpace(ViewData["Title"] as string)
        ? appName
        : ViewData["Title"];
    var isDashboard = string.Equals(ViewContext.RouteData.Values["controller"]?.ToString(), "MenuAdmin", StringComparison.OrdinalIgnoreCase)
        && string.Equals(ViewContext.RouteData.Values["action"]?.ToString(), "Index", StringComparison.OrdinalIgnoreCase);
    var currentRoleName = User.FindFirst(ClaimTypes.Role)?.Value ?? "-";
    var currentRoleId = int.TryParse(User.FindFirstValue("role_id"), out var parsedRole) ? parsedRole : 0;
    var companyId = int.TryParse(User.FindFirstValue("company_id"), out var parsedCompanyId) ? parsedCompanyId : 0;
    var departmentId = int.TryParse(User.FindFirstValue("department_id"), out var parsedDeptId) ? parsedDeptId : 0;
    var sectionId = int.TryParse(User.FindFirstValue("section_id"), out var parsedSectionId) ? parsedSectionId : 0;
    var positionId = int.TryParse(User.FindFirstValue("position_id"), out var parsedPositionId) ? parsedPositionId : 0;
    var roleIds = (User.FindFirstValue("role_ids") ?? string.Empty)
        .Split(',', StringSplitOptions.RemoveEmptyEntries)
        .Select(value => int.TryParse(value, out var id) ? id : 0)
        .Where(id => id > 0)
        .Distinct()
        .ToList();
    if (roleIds.Count == 0 && currentRoleId > 0)
    {
        roleIds.Add(currentRoleId);
    }
    var roleOptions = new System.Collections.Generic.List<one_db_mitra.Models.Db.tbl_m_peran>();
    if (roleIds.Count > 0)
    {
        roleOptions = await Db.tbl_m_peran.AsNoTracking()
            .Where(r => roleIds.Contains(r.peran_id))
            .OrderByDescending(r => r.level_akses)
            .ToListAsync();
    }
    var currentRole = roleOptions.FirstOrDefault(role => role.peran_id == currentRoleId);
    var departmentName = departmentId > 0
        ? await Db.tbl_m_departemen.AsNoTracking()
            .Where(d => d.departemen_id == departmentId)
            .Select(d => d.nama_departemen)
            .FirstOrDefaultAsync()
        : null;
    var sectionName = sectionId > 0
        ? await Db.tbl_m_seksi.AsNoTracking()
            .Where(s => s.seksi_id == sectionId)
            .Select(s => s.nama_seksi)
            .FirstOrDefaultAsync()
        : null;
    var positionName = positionId > 0
        ? await Db.tbl_m_jabatan.AsNoTracking()
            .Where(p => p.jabatan_id == positionId)
            .Select(p => p.nama_jabatan)
            .FirstOrDefaultAsync()
        : null;
    var scopeCompanyName = User.FindFirstValue("company_name");
    var scopeLabel = $"Scope: {(string.IsNullOrWhiteSpace(scopeCompanyName) ? "Semua Perusahaan" : scopeCompanyName)}";
    scopeLabel += $" · Dept {(string.IsNullOrWhiteSpace(departmentName) ? "Semua" : departmentName)}";
    scopeLabel += $" · Section {(string.IsNullOrWhiteSpace(sectionName) ? "Semua" : sectionName)}";
    scopeLabel += $" · Jabatan {(string.IsNullOrWhiteSpace(positionName) ? "Semua" : positionName)}";
    var impersonatorName = User.FindFirstValue("impersonator_name");
    var isImpersonating = !string.IsNullOrWhiteSpace(impersonatorName);
}
<!DOCTYPE html>
<html lang="id" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@pageTitle - @appName</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Manrope:wght@400;500;600;700;800&family=Montserrat:wght@400;500;600;700;800&family=Poppins:wght@400;500;600;700;800&family=Plus+Jakarta+Sans:wght@400;500;600;700;800&family=Sora:wght@400;500;600;700;800&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --app-font-primary: '@fontPrimary';
            --app-font-secondary: '@fontSecondary';
        }
    </style>
    <script>
        window.appUserTheme = '@(userTheme ?? string.Empty)';
    </script>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="layout-shell" id="layoutShell">
        <aside class="app-sidebar" id="appSidebar">
            <div class="sidebar-header">
                <div>
                    @if (!string.IsNullOrWhiteSpace(logoUrl))
                    {
                        <img src="@logoUrl" alt="" class="brand-logo" onerror="this.style.display='none'" />
                    }
                    <span class="brand-title">@appName</span>
                    <small class="brand-subtitle">@headerName</small>
                    <span class="brand-underline"></span>
                    <span class="brand-chip">Live</span>
                </div>
                <button class="btn btn-link text-decoration-none text-white sidebar-close d-lg-none" data-sidebar-close>
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="sidebar-body">
                <div class="sidebar-section">
                    <p class="sidebar-label">Navigasi Inti</p>
                    @await Component.InvokeAsync("SidebarMenu")
                </div>
                <div class="sidebar-section sidebar-footer">
                    <div class="sidebar-card">
                        <p class="mb-1 fw-semibold">Status Sistem</p>
                        <p class="mb-0 text-secondary small">Sinkronisasi menu berjalan normal.</p>
                    </div>
                </div>
            </div>
        </aside>
        <div class="sidebar-backdrop" data-sidebar-close aria-hidden="true"></div>
        <div class="app-main">
            <header class="app-topbar">
                <div class="d-flex align-items-center gap-2">
                    <button class="btn btn-outline-secondary me-2 d-lg-none" data-sidebar-toggle>
                        <i class="bi bi-list"></i>
                    </button>
                    <div>
                        <p class="topbar-label mb-0">Zona Aktif</p>
                        <h1 class="topbar-title mb-0">@pageTitle</h1>
                        @if (!isDashboard)
                        {
                            <nav class="app-breadcrumb" aria-label="Breadcrumb">
                                <a asp-controller="MenuAdmin" asp-action="Index">Dashboard</a>
                                <span>/</span>
                                <span>@pageTitle</span>
                            </nav>
                        }
                        <span class="badge text-bg-light border mt-2 d-inline-flex align-items-center gap-1">
                            <i class="bi bi-shield-lock"></i>@scopeLabel
                        </span>
                    </div>
                </div>
                <div class="d-flex align-items-center gap-2 topbar-actions">
                    <div class="topbar-search">
                        <i class="bi bi-search"></i>
                        <input id="globalSearchInput" type="text" placeholder="Cari user, role, menu..." autocomplete="off" />
                        <div class="search-dropdown" id="globalSearchDropdown"></div>
                    </div>
                    @if (isImpersonating)
                    {
                        <div class="d-flex align-items-center gap-2">
                            <span class="badge text-bg-warning">
                                Impersonate: @impersonatorName
                            </span>
                            <form asp-controller="Account" asp-action="StopImpersonate" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                <button type="submit" class="btn btn-outline-warning btn-sm">Stop</button>
                            </form>
                        </div>
                    }
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                            @(User.FindFirst("company_name")?.Value ?? "PT Indexim Global Internasional")
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end small">
                            <li><span class="dropdown-item-text text-secondary">Perusahaan aktif</span></li>
                        </ul>
                    </div>
                    @if (roleOptions.Count > 1)
                    {
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="bi bi-shield-check me-1"></i>@currentRoleName
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end small">
                                @foreach (var role in roleOptions)
                                {
                                    var isActive = role.peran_id == currentRoleId;
                                    <li>
                                        <form asp-controller="Account" asp-action="SwitchRole" method="post" class="px-3">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="roleId" value="@role.peran_id" />
                                            <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                            <button type="submit" class="dropdown-item @(isActive ? "active" : "")" @(isActive ? "disabled" : null)>
                                                @role.nama_peran
                                            </button>
                                        </form>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                    <button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#quickSwitchModal" title="Quick Switch Role">
                        <i class="bi bi-arrow-repeat"></i>
                    </button>
                    <button class="btn btn-outline-secondary" id="themeToggle" type="button" title="Ganti Tema">
                        <i class="bi bi-palette"></i>
                    </button>
                    <div class="dropdown">
                        <button class="btn btn-primary d-flex align-items-center gap-2" data-bs-toggle="dropdown">
                            @{
                                var profilePhoto = User.FindFirst("profile_photo")?.Value;
                                var initial = (User.Identity?.IsAuthenticated == true && !string.IsNullOrWhiteSpace(User.Identity?.Name))
                                    ? User.Identity!.Name[..1].ToUpperInvariant()
                                    : "A";
                            }
                            @if (!string.IsNullOrWhiteSpace(profilePhoto))
                            {
                                <img src="@profilePhoto" alt="Foto Profil" class="avatar-photo" />
                            }
                            else
                            {
                                <span class="avatar-circle">@initial</span>
                            }
                            <span>@(User.Identity?.IsAuthenticated == true ? User.Identity?.Name : "Administrator")</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end small">
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Profil</a></li>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="px-3">
                                        @Html.AntiForgeryToken()
                                        <button class="btn btn-link dropdown-item p-0" type="submit">Keluar</button>
                                    </form>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </header>
            @if (announcementActive)
            {
                <div class="announcement-banner announcement-@announcementType">
                    <div class="announcement-inner">
                        <strong>@announcementTitle</strong>
                        <span>@setting.announcement_message</span>
                    </div>
                </div>
            }
            <main class="app-content">
                @if (TempData["AlertMessage"] is string alertMessage)
                {
                    var alertType = TempData["AlertType"] as string ?? "success";
                    <div class="toast-data" data-message="@alertMessage" data-type="@alertType"></div>
                }
                @RenderBody()
            </main>
            <footer class="app-footer">
                <div class="app-footer-inner">
                    <span>@footerText</span>
                </div>
            </footer>
        </div>
    </div>
    <div class="toast-container position-fixed top-0 end-0 p-3" id="toastContainer">
        <div class="toast align-items-center" id="appToast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body"></div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
    <div class="modal fade" id="quickSwitchModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Quick Switch Role</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <span class="text-secondary small">Role aktif</span>
                        <span class="badge text-bg-primary">@currentRoleName</span>
                    </div>
                    <div class="list-group">
                        @if (roleOptions.Count > 0)
                        {
                            foreach (var role in roleOptions)
                            {
                                var isActive = role.peran_id == currentRoleId;
                                <form asp-controller="Account" asp-action="SwitchRole" method="post" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="roleId" value="@role.peran_id" />
                                    <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                    <span>@role.nama_peran</span>
                                    <button type="submit" class="btn btn-sm btn-outline-primary" @(isActive ? "disabled" : null)>
                                        @(isActive ? "Aktif" : "Pilih")
                                    </button>
                                </form>
                            }
                        }
                        else
                        {
                            <div class="text-secondary small">Role tidak tersedia.</div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Tutup</button>
                </div>
            </div>
        </div>
    </div>
    <div class="command-palette" id="commandPalette" aria-hidden="true">
        <div class="command-backdrop" data-command-close></div>
        <div class="command-panel">
            <div class="command-input">
                <i class="bi bi-command"></i>
                <input id="commandPaletteInput" type="text" placeholder="Cari menu, user, role..." autocomplete="off" />
                <kbd>ESC</kbd>
            </div>
            <div class="command-results" id="commandPaletteResults"></div>
            <div class="command-hint">Enter untuk membuka, ↑↓ untuk navigasi</div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.14/signalr.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
