@model IReadOnlyList<one_db_mitra.Models.Admin.SectionListItem>
@{
    ViewData["Title"] = "Manajemen Section";
    var companyOptions = ViewBag.CompanyOptions as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
    var guideItems = new[]
    {
        "Pastikan departemen sudah dibuat sebelum menambah section.",
        "Gunakan filter perusahaan agar daftar lebih mudah dikelola.",
        "Section akan mengikuti departemen saat pemetaan jabatan."
    };
}

<div class="container-fluid px-0">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center gap-3 mb-4">
        <div>
            <p class="text-uppercase text-secondary small mb-1">Pengaturan</p>
            <h2 class="mb-1">Manajemen Section</h2>
            <p class="text-secondary mb-0">Kelola section di tiap departemen.</p>
        </div>
        <div class="d-flex flex-wrap gap-2 align-items-center">
            <form method="get" class="d-flex flex-wrap align-items-center gap-2">
                <input type="text" class="form-control form-control-sm" name="search" placeholder="Cari section" value="@(ViewBag.CurrentSearch ?? string.Empty)" />
                <select class="form-select form-select-sm" name="companyId" asp-items="companyOptions"></select>
                <input type="hidden" name="activeOnly" value="false" />
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="sectionActiveOnly" name="activeOnly" value="true" @(((bool?)ViewBag.ActiveOnly ?? true) ? "checked" : null) onchange="this.form.submit()" />
                    <label class="form-check-label" for="sectionActiveOnly">Tampilkan aktif saja</label>
                </div>
                <span class="badge @(((bool?)ViewBag.ActiveOnly ?? true) ? "text-bg-success" : "text-bg-secondary")">
                    @(((bool?)ViewBag.ActiveOnly ?? true) ? "Filter: Aktif" : "Filter: Semua")
                </span>
                <button type="submit" class="btn btn-sm btn-outline-primary">Cari</button>
            </form>
            @if (ViewBag.ScopeInfo is string scopeInfo && !string.IsNullOrWhiteSpace(scopeInfo))
            {
                <span class="badge text-bg-light border">
                    <i class="bi bi-shield-lock me-1"></i>@scopeInfo
                </span>
            }
            <a class="btn btn-primary" asp-action="CreateSection">
                <i class="bi bi-plus-lg me-2"></i>Tambah Section
            </a>
        </div>
    </div>
    @await Html.PartialAsync("_SettingGuide", guideItems, new ViewDataDictionary(ViewData)
    {
        ["GuideTitle"] = "Cara mengatur section"
    })

    <div class="card">
        <div class="card-header">
            <h6 class="mb-0">Daftar Section</h6>
        </div>
        <div class="card-body table-responsive">
            <table class="table table-striped align-middle mb-0">
                <thead>
                    <tr>
                        <th>Kode</th>
                        <th>Nama</th>
                        <th>Perusahaan</th>
                        <th>Departemen</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="6" class="text-center text-secondary py-4">Belum ada section. Tambahkan section pertama.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var sec in Model)
                        {
                            <tr>
                                <td>@sec.SectionCode</td>
                                <td>@sec.SectionName</td>
                                <td>@sec.CompanyName</td>
                                <td>@sec.DepartmentName</td>
                                <td>
                                    <span class="badge @(sec.IsActive ? "text-bg-success" : "text-bg-secondary")">
                                        @(sec.IsActive ? "Aktif" : "Nonaktif")
                                    </span>
                                </td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary" asp-action="EditSection" asp-route-id="@sec.SectionId">Edit</a>
                                <form asp-action="DeleteSection" asp-route-id="@sec.SectionId" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="activeOnly" value="@((bool?)ViewBag.ActiveOnly ?? true)" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Hapus section ini?')">Hapus</button>
                                </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
