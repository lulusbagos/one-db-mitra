@model one_db_mitra.Models.Admin.CompanyEditViewModel
@{
    ViewData["Title"] = "Detail Perusahaan";
    var guideItems = new[]
    {
        "Halaman ini bersifat informasi saja.",
        "Perubahan data perusahaan dilakukan melalui Pengajuan Perusahaan.",
        "Jika ada data kurang lengkap, cek status pengajuan."
    };
}

<div class="container-fluid px-0">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <p class="text-uppercase text-secondary small mb-1">Pengaturan</p>
            <h2 class="mb-0">Detail Perusahaan</h2>
        </div>
        <a class="btn btn-outline-secondary" asp-action="Companies">Kembali</a>
    </div>
    @await Html.PartialAsync("_SettingGuide", guideItems, new ViewDataDictionary(ViewData)
    {
        ["GuideTitle"] = "Informasi perusahaan"
    })

    <div class="card">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="CompanyCode" class="form-label"></label>
                    <input asp-for="CompanyCode" class="form-control" readonly />
                </div>
                <div class="col-md-6">
                    <label asp-for="CompanyName" class="form-label"></label>
                    <input asp-for="CompanyName" class="form-control" readonly />
                </div>
                <div class="col-md-6">
                    <label asp-for="CompanyAddress" class="form-label"></label>
                    <input asp-for="CompanyAddress" class="form-control" readonly />
                </div>
                <div class="col-md-4">
                    <label asp-for="CompanyStatus" class="form-label"></label>
                    <input asp-for="CompanyStatus" class="form-control" readonly />
                </div>
                <div class="col-md-6">
                    <label asp-for="CompanyTypeId" class="form-label"></label>
                    <select asp-for="CompanyTypeId" class="form-select" asp-items="Model.CompanyTypeOptions" disabled></select>
                </div>
                <div class="col-md-6">
                    <label asp-for="ParentCompanyId" class="form-label"></label>
                    <select asp-for="ParentCompanyId" class="form-select" asp-items="Model.ParentCompanyOptions" disabled>
                        <option value="">--</option>
                    </select>
                </div>
                <div class="col-md-6 d-flex align-items-center">
                    <div class="form-check mt-4">
                        <input asp-for="IsActive" class="form-check-input" disabled />
                        <label asp-for="IsActive" class="form-check-label"></label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
