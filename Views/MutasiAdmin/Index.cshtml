@model one_db_mitra.Models.Admin.MutasiIndexViewModel
@using System
@{
    ViewData["Title"] = "Mutasi Karyawan";

    string FormatDate(DateTime value) => value.ToString("dd MMM yyyy");
    string StatusBadge(string status)
    {
        return status switch
        {
            "approved" => "text-bg-success",
            "rejected" => "text-bg-danger",
            "pending" => "text-bg-warning",
            _ => "text-bg-secondary"
        };
    }
}

<div class="karyawan-header">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center gap-3 text-white">
        <div>
            <span class="badge karyawan-badge mb-2">
                <i class="bi bi-arrow-left-right me-2"></i>Mutasi Karyawan
            </span>
            <h2 class="mb-1 fw-bold">Approval Mutasi</h2>
            <p class="mb-0 text-white-50">Request → Approve → Execute untuk perpindahan karyawan.</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-light fw-semibold" asp-action="Create">
                <i class="bi bi-plus-circle me-2"></i>Ajukan Mutasi
            </a>
        </div>
    </div>
</div>

<div class="container-fluid px-0 karyawan-body">
    <div class="alert alert-info border-0 shadow-sm rounded-4 mb-4">
        <div class="d-flex align-items-start gap-3">
            <i class="bi bi-info-circle-fill fs-4"></i>
            <div>
                <div class="fw-semibold">Aturan Approval Mutasi</div>
                <div class="small text-secondary">
                    Approval hanya bisa dilakukan oleh perusahaan asal (karyawan terakhir terdaftar), dan harus oleh
                    admin perusahaan yang tidak memiliki departemen atau memiliki level peran tertinggi. Owner selalu bisa approve.
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 rounded-4 h-100">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0">Permintaan Masuk</h6>
                        <div class="text-secondary small">Dari perusahaan lain ke perusahaan Anda.</div>
                    </div>
                    <span class="badge text-bg-light">@Model.Incoming.Count</span>
                </div>
                <div class="card-body">
                    @if (!Model.Incoming.Any())
                    {
                        <div class="text-secondary">Belum ada permintaan masuk.</div>
                    }
                    else
                    {
                        <div class="d-flex flex-column gap-3">
                            @foreach (var item in Model.Incoming)
                            {
                                <div class="mutasi-card">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <div class="fw-semibold">@item.NamaLengkap</div>
                                            <div class="text-secondary small">NIK: @item.NoNik</div>
                                            <div class="text-secondary small">@item.CompanyAsal → @item.CompanyTujuan</div>
                                        </div>
                                        <span class="badge @StatusBadge(item.Status)">
                                            @item.Status.ToUpperInvariant()
                                        </span>
                                    </div>
                                    <div class="text-secondary small mt-2">Pengajuan: @FormatDate(item.TanggalPengajuan)</div>
                                    @if (!string.IsNullOrWhiteSpace(item.Catatan))
                                    {
                                        <div class="small mt-2">@item.Catatan</div>
                                    }
                                    @if (item.CanApprove)
                                    {
                                        <div class="d-flex gap-2 mt-3">
                                            <form asp-action="Approve" method="post" class="d-flex gap-2">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.RequestId" />
                                                <input type="text" name="catatan" class="form-control form-control-sm" placeholder="Catatan approval (opsional)" />
                                                <button type="submit" class="btn btn-sm btn-success">Approve</button>
                                            </form>
                                            <form asp-action="Reject" method="post" class="d-flex gap-2">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.RequestId" />
                                                <input type="text" name="catatan" class="form-control form-control-sm" placeholder="Catatan penolakan" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger">Reject</button>
                                            </form>
                                        </div>
                                    }
                                    else if (!string.IsNullOrWhiteSpace(item.DisetujuiOleh))
                                    {
                                        <div class="text-secondary small mt-2">Diproses oleh @item.DisetujuiOleh pada @(item.TanggalKeputusan?.ToString("dd MMM yyyy"))</div>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 rounded-4 h-100">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0">Permintaan Keluar</h6>
                        <div class="text-secondary small">Pengajuan dari perusahaan Anda ke perusahaan lain.</div>
                    </div>
                    <span class="badge text-bg-light">@Model.Outgoing.Count</span>
                </div>
                <div class="card-body">
                    @if (!Model.Outgoing.Any())
                    {
                        <div class="text-secondary">Belum ada permintaan keluar.</div>
                    }
                    else
                    {
                        <div class="d-flex flex-column gap-3">
                            @foreach (var item in Model.Outgoing)
                            {
                                <div class="mutasi-card">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <div class="fw-semibold">@item.NamaLengkap</div>
                                            <div class="text-secondary small">NIK: @item.NoNik</div>
                                            <div class="text-secondary small">@item.CompanyAsal → @item.CompanyTujuan</div>
                                        </div>
                                        <span class="badge @StatusBadge(item.Status)">
                                            @item.Status.ToUpperInvariant()
                                        </span>
                                    </div>
                                    <div class="text-secondary small mt-2">Pengajuan: @FormatDate(item.TanggalPengajuan)</div>
                                    @if (!string.IsNullOrWhiteSpace(item.Catatan))
                                    {
                                        <div class="small mt-2">@item.Catatan</div>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(item.DisetujuiOleh))
                                    {
                                        <div class="text-secondary small mt-2">Diproses oleh @item.DisetujuiOleh pada @(item.TanggalKeputusan?.ToString("dd MMM yyyy"))</div>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .mutasi-card {
            background: #f8fafc;
            border: 1px solid #e2e8f0;
            border-radius: 16px;
            padding: 1rem 1.25rem;
        }
    </style>
}
